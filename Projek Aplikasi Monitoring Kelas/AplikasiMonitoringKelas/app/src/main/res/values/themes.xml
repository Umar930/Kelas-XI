<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AplikasiMonitoringKelas" parent="android:Theme.Material.Light.NoActionBar" />
    
    <!-- Theme untuk Activity berbasis XML dengan Material Components -->
    <style name="Theme.AplikasiMonitoringKelas.AppCompat" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Disable default ActionBar for custom Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>