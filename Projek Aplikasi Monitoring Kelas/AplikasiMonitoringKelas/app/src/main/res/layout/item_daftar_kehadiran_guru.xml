<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardGuruKehadiran"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Jam Ke Badge -->
        <TextView
            android:id="@+id/tvJamKe"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/badge_circle"
            android:gravity="center"
            android:layout_marginEnd="12dp" />

        <!-- Info Guru -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNamaGuru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pak Ahmad"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvKodeGuru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KODE123"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvNamaMapel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemrograman Web"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvGuruPengganti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diganti: Bu Sari"
                android:textSize="12sp"
                android:textColor="@color/info"
                android:visibility="gone"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvInputBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diinput oleh: Siswa"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:visibility="gone"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal: 2023-01-01"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:visibility="gone"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvStatusKehadiran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hadir"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
