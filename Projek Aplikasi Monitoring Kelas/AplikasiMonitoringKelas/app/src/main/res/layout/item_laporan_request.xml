<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardLaporan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Jam Ke & Delete Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvJamKe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jam ke-1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="Hapus"
                app:tint="@color/danger" />

        </LinearLayout>
        <!-- Header details: Tanggal & Kode Guru -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2025-12-13"
                android:textSize="13sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvKodeGuru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GR003"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Info Guru -->
        <TextView
            android:id="@+id/tvNamaGuru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pak Ahmad"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="8dp" />

        <!-- Info Mapel -->
        <TextView
            android:id="@+id/tvNamaMapel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pemrograman Web"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

        <!-- Pesan dari Siswa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_note"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pesan Siswa:"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvPesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mohon dicarikan guru pengganti"
                android:textSize="13sp"
                android:textColor="@color/text_primary"
                android:fontStyle="italic"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvRequestedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dikirim oleh: Umar"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="6dp" />

        <!-- Guru Pengganti Info -->
        <TextView
            android:id="@+id/tvGuruPengganti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diganti: Bu Sari"
            android:textSize="12sp"
            android:textColor="@color/success"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
