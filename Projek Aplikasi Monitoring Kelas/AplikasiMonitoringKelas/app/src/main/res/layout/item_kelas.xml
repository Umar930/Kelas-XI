<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#E3F2FD"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_view"
                android:tint="#1976D2"
                android:padding="12dp"
                android:background="@drawable/badge_bg"
                android:backgroundTint="@android:color/white"
                android:contentDescription="Kelas" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvNamaKelas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XI RPL 1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2" />

                <TextView
                    android:id="@+id/tvKodeKelas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XI-RPL-1"
                    android:textSize="12sp"
                    android:textColor="#1976D2"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvJumlahSiswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35 Siswa"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:background="@drawable/badge_bg"
                android:backgroundTint="@android:color/white"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />

        </LinearLayout>

        <!-- Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tingkat Jurusan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tingkat:"
                    android:textSize="12sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tvTingkat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XI"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jurusan:"
                    android:textSize="12sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tvJurusan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RPL"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wali Kelas:"
                    android:textSize="12sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tvWaliKelas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pak Ahmad"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- Siswa List (Hidden by default, expandable) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSiswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:visibility="gone" />

        <!-- Toggle Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleSiswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat Daftar Siswa"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:icon="@android:drawable/arrow_down_float"
            app:iconGravity="end" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
