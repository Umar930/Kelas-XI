<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Left Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Jam Header -->
                <TextView
                    android:id="@+id/tvJam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jam Ke 1-2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginVertical="8dp" />

                <!-- Mata Pelajaran -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Mata Pelajaran"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": "
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvMapel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bahasa Indonesia"
                        android:textSize="13sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Kode Guru -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Kode Guru"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": "
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvKodeGuru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="G001"
                        android:textSize="13sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Nama Guru -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Nama Guru"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": "
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvNamaGuru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budi Setiawan"
                        android:textSize="13sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </LinearLayout>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ Hadir"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/badge_background_success"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <!-- Request Pengganti Section -->
        <LinearLayout
            android:id="@+id/layoutRequestPengganti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:paddingTop="12dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginBottom="12dp" />

            <!-- Tombol Request Guru Pengganti ke Kurikulum -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInputPengganti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request Guru Pengganti"
                android:textSize="14sp"
                android:textAllCaps="false"
                app:icon="@drawable/ic_send"
                app:iconGravity="textStart"
                app:backgroundTint="@color/primary"
                android:visibility="gone" />

            <!-- Status Request Pengganti -->
            <LinearLayout
                android:id="@+id/layoutStatusPengganti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guru Pengganti:"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvGuruPengganti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Guru Pengganti"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvStatusPengganti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⏳ Pending"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/badge_background_warning"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
