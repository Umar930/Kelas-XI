<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- TextView untuk menampilkan hasil -->
    <TextView
        android:id="@+id/tvHasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="100sp" />

    <!-- EditText untuk angka pertama -->
    <EditText
        android:id="@+id/etAngka1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Masukkan Angka 1"
        android:inputType="numberDecimal" />

    <!-- EditText untuk angka kedua -->
    <EditText
        android:id="@+id/etAngka2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Masukkan Angka 2"
        android:inputType="numberDecimal" />

    <!-- Button untuk operasi penjumlahan -->
    <Button
        android:id="@+id/btnTambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#4CAF50"
        android:onClick="btnJumlah"
        android:text="PENJUMLAHAN" />

    <!-- Button untuk operasi pengurangan -->
    <Button
        android:id="@+id/btnKurang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#F44336"
        android:onClick="btnKurang"
        android:text="PENGURANGAN" />

    <!-- Button untuk operasi perkalian -->
    <Button
        android:id="@+id/btnKali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFC107"
        android:onClick="btnKali"
        android:text="PERKALIAN" />

    <!-- Button untuk operasi pembagian -->
    <Button
        android:id="@+id/btnBagi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#2196F3"
        android:onClick="btnBagi"
        android:text="PEMBAGIAN" />

</LinearLayout>