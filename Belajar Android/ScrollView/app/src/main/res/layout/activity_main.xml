<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollViewUtama"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Nama Lengkap"
                android:inputType="textPersonName"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etTanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Tempat &amp; Tanggal Lahir"
                android:inputType="text"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Alamat Lengkap"
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etNoTelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Nomor Telepon"
                android:inputType="phone"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etOrangTua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Nama Orang Tua"
                android:inputType="textPersonName"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etPekerjaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Pekerjaan"
                android:inputType="text"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etHobi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Hobi"
                android:inputType="text"
                android:padding="12dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>